<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="somdosbichos.cursoandroid.com.somdosbichos.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5e9b9"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageCachorroId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="39dp"
            app:srcCompat="@drawable/cao" />

        <ImageView
            android:id="@+id/imageGatoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignTop="@+id/imageCachorroId"
            app:srcCompat="@drawable/gato" />

        <ImageView
            android:id="@+id/imageLeaoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageCachorroId"
            android:layout_alignStart="@+id/imageCachorroId"
            android:layout_below="@+id/imageCachorroId"
            android:layout_marginTop="19dp"
            app:srcCompat="@drawable/leao" />

        <ImageView
            android:id="@+id/imageMacacoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageGatoId"
            android:layout_alignRight="@+id/imageGatoId"
            android:layout_alignTop="@+id/imageLeaoId"
            app:srcCompat="@drawable/macaco" />

        <ImageView
            android:id="@+id/imageOvelhaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageLeaoId"
            android:layout_alignStart="@+id/imageLeaoId"
            android:layout_below="@+id/imageMacacoId"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/ovelha" />

        <ImageView
            android:id="@+id/imageVacaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageMacacoId"
            android:layout_alignStart="@+id/imageMacacoId"
            android:layout_below="@+id/imageMacacoId"
            app:srcCompat="@drawable/vaca" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/direitos" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
