<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="preferenciascorusuario.cursoandroid.com.preferenciascorusuario.MainActivity">

    <RelativeLayout
        android:id="@+id/relativoId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="@string/texto_titulo"
            android:textSize="@dimen/tamanho_titulo" />

        <RadioGroup
            android:id="@+id/radioGroupId"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@android:color/background_light">

            <RadioButton
                android:id="@+id/azulId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cor_azul" />

            <RadioButton
                android:id="@+id/laranjaId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cor_laranja" />

            <RadioButton
                android:id="@+id/verdeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cor_verde" />
        </RadioGroup>

        <Button
            android:id="@+id/botaoSalvarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupId"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="@string/botao_salvar" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
